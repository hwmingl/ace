<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fighter.ace.cms.dao.main.AreaDao">

    <resultMap id="beanMap" type="com.fighter.ace.cms.entity.main.Area">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="reid" property="reid" jdbcType="BIGINT"/>
        <result column="disorder" property="disorder" jdbcType="BIGINT"/>
    </resultMap>


    <!-- 查询页数 -->
    <select id="listPageCount" parameterType="java.util.Map" resultType="java.lang.Long">
        SELECT
        COUNT(1)
        FROM
        t_area
        WHERE 1 = 1
        <if test="null != reid">
            AND reid = #{reid}
        </if>
    </select>

    <!-- 查询分页 -->
    <select id="listPage" parameterType="java.util.Map" resultMap="beanMap">
        SELECT
        id,
        name,
        reid,
        disorder
        FROM
        t_area
        WHERE 1 = 1
        <if test="null != reid">
            AND reid = #{reid}
        </if>
        ORDER BY id ASC
        LIMIT #{pageFirst},#{pageSize}
    </select>


    <select id="listArea" parameterType="java.util.Map" resultMap="beanMap">
        SELECT
        id,
        name,
        reid,
        disorder
        FROM
        t_area
        WHERE 1 = 1
        <if test="null != reid">
            AND reid = #{reid}
        </if>
        ORDER BY id ASC
    </select>

    <update id="update" parameterType="com.fighter.ace.cms.entity.main.Area">
        UPDATE t_area
        SET name = #{name}
        where id = #{id}
    </update>

    <select id="getById" resultMap="beanMap" parameterType="java.lang.Long">
        SELECT id,
        name,
        reid,
        disorder
        FROM t_area
        WHERE id = #{id}
    </select>
</mapper>
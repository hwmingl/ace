<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fighter.ace.cms.dao.external.ModelDownloadDao">

    <resultMap id="beanMap" type="com.fighter.ace.cms.entity.external.ModelDownload">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="member_id" property="memberId" jdbcType="BIGINT"/>
        <result column="model_id" property="modelId" jdbcType="BIGINT"/>
        <result column="cost" property="cost" jdbcType="INTEGER"/>
        <result column="pay_type" property="payType" jdbcType="INTEGER"/>
        <result column="status" property="status" jdbcType="INTEGER"/>

        <result column="modelName" property="modelName" jdbcType="VARCHAR"/>
    </resultMap>

    <insert id="insert" parameterType="com.fighter.ace.cms.entity.external.ModelDownload" keyProperty="id" useGeneratedKeys="true">
        INSERT t_model_download(create_time,
            member_id,
            model_id,
            pay_type,
            cost,
            status)
        VALUES (
            now(),
            #{memberId},
            #{modelId},
            #{payType},
            #{cost},
            1
        )
    </insert>

    <select id="listPageCount" parameterType="java.util.Map" resultType="java.lang.Long">
        SELECT
            count(1)
        FROM
            t_model_download
        WHERE member_id = #{memberId}
    </select>

    <select id="listPage" parameterType="java.util.Map" resultMap="beanMap">
        SELECT
            d.*,
            m.name as modelName
        FROM
            t_model_download d LEFT JOIN t_model m ON d.model_id = m.id
        WHERE d.member_id = #{memberId}
        ORDER BY id DESC
        LIMIT #{pageFirst},#{pageSize}
    </select>

    <select id="getModelDownload" parameterType="java.util.Map" resultMap="beanMap">
        SELECT id,
            create_time,
            member_id,
            model_id,
            pay_type,
            cost,
            status
        FROM t_model_download
        WHERE member_id = #{memberId}
        AND model_id = #{modelId}
        LIMIT 1
    </select>

    <delete id="deleteModelDownload" parameterType="java.util.Map">
        DELETE FROM
            t_model_download
        WHERE id IN
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
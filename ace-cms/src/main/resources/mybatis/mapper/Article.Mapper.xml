<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fighter.ace.cms.dao.external.NewsDao">

    <resultMap id="beanMap" type="com.fighter.ace.cms.entity.external.News">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="type" property="type" jdbcType="INTEGER"/>
        <result column="summary" property="summary" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="source" property="source" jdbcType="VARCHAR"/>
        <result column="author" property="author" jdbcType="VARCHAR"/>
        <result column="view_count" property="viewCount" jdbcType="INTEGER"/>
        <result column="hot" property="hot" jdbcType="INTEGER"/>
        <result column="recommend" property="recommend" jdbcType="INTEGER"/>
        <result column="pic_url" property="picUrl" jdbcType="VARCHAR"/>
        <result column="status" property="status" javaType="INTEGER"/>
        <result column="ext1" property="ext1" jdbcType="VARCHAR"/>
        <result column="ext2" property="ext2" jdbcType="VARCHAR"/>
        <result column="ext3" property="ext3" jdbcType="VARCHAR"/>
    </resultMap>

    <!-- 查询总页数 -->
    <select id="listPageCount" parameterType="java.util.Map" resultType="java.lang.Long">
        SELECT
        COUNT(1)
        FROM
        t_article
        WHERE status != -1
        <if test="status != null">AND status = #{status}</if>
        <if test="title != null">AND title LIKE #{title}</if>
        <if test="author != null">AND author LIKE #{author}</if>
        <if test="recommend != null">AND recommend = #{recommend}</if>
    </select>

    <!-- 查询分页新闻 -->
    <select id="listPage" parameterType="java.util.Map" resultMap="beanMap">
        SELECT
        *
        FROM
        t_article
        WHERE status != -1
        <if test="status != null">AND status = #{status}</if>
        <if test="title != null">AND title LIKE #{title}</if>
        <if test="author != null">AND author LIKE #{author}</if>
        <if test="recommend != null">AND recommend = #{recommend}</if>
        ORDER BY id DESC
        LIMIT #{pageFirst},#{pageSize}
    </select>

    <!--添加新闻-->
    <insert id="insert" parameterType="com.fighter.ace.cms.entity.external.Article" keyProperty="id" useGeneratedKeys="true">
        INSERT t_article(
        create_time,
        title,
        type,
        summary,
        content,
        source,
        author,
        recommend,
        pic_url,
        status)
        VALUES (
        now(),
        #{title},
        #{type},
        #{summary},
        #{content},
        #{source},
        #{author},
        #{recommend},
        #{picUrl},
        0
        )
    </insert>

    <!-- 删除新闻 -->
    <update id="deleteById" parameterType="java.lang.Long">
        UPDATE t_article
        SET
        modified_time = now(),
        status = -1
        where id = #{id}
    </update>

    <!-- 批量删除新闻 -->
    <update id="batchDelete" parameterType="java.lang.Integer">
        UPDATE t_article
        SET
        modified_time = now(),
        status = -1
        WHERE id in
        <foreach item="id" collection="array" open="(" separator ="," close=")">
            #{id}
        </foreach>
    </update>

    <!-- 更新 -->
    <update id="update" parameterType="com.fighter.ace.cms.entity.external.Article">
        UPDATE t_article
        SET modified_time = now()
        <if test="title != null">
            ,title = #{title}
        </if>
        <if test="type != null">
            ,type = #{type}
        </if>
        <if test="summary != null">
            ,summary = #{summary}
        </if>
        <if test="content != null">
            ,content = #{content}
        </if>
        <if test="source != null">
            ,source = #{source}
        </if>
        <if test="author != null">
            ,author = #{author}
        </if>
        <if test="recommend != null">
            ,recommend = #{recommend}
        </if>
        <if test="viewCount != null">
            ,view_count = #{viewCount}
        </if>
        <if test="picUrl != null">
            ,pic_url = #{picUrl}
        </if>
        WHERE id = #{id};
    </update>

    <!-- 批量审核新闻 -->
    <update id="batchCheck" parameterType="java.lang.Integer">
        UPDATE t_article
        SET
        modified_time = now(),
        status = 1
        WHERE id in
        <foreach item="id" collection="array" open="(" separator ="," close=")">
            #{id}
        </foreach>
    </update>

    <!-- 详情 -->
    <select id="getById" resultMap="beanMap">
        select * from t_article
        where id = #{id}
    </select>


    <select id="findRecommendList" resultMap="beanMap" parameterType="java.lang.Integer">
        SELECT
        id,
        create_time,
        title,
        summary,
        content,
        source,
        author,
        view_count,
        hot,
        recommend,
        pic_url
        FROM t_article
        WHERE status = 1 and recommend = 1
        ORDER BY create_time DESC
        limit #{count}
    </select>

    <select id="findHotList" resultMap="beanMap" parameterType="java.lang.Integer">
        SELECT
        id,
        create_time,
        title,
        summary,
        content,
        source,
        author,
        view_count,
        hot,
        recommend,
        pic_url
        FROM t_article
        WHERE status = 1
        ORDER BY view_count DESC
        limit #{count}
    </select>

</mapper>
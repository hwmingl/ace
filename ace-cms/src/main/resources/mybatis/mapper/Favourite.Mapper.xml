<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fighter.ace.cms.dao.external.FavouriteDao">

    <resultMap id="beanMap" type="com.fighter.ace.cms.entity.external.Favourite">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="member_id" property="memberId" jdbcType="BIGINT"/>
        <result column="model_id" property="modelId" jdbcType="BIGINT"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <resultMap id="beanModelMap" type="com.fighter.ace.cms.entity.external.FavouriteModel">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="member_id" property="memberId" jdbcType="BIGINT"/>
        <result column="model_id" property="modelId" jdbcType="BIGINT"/>
        <result column="model_name" property="modelName" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <insert id="insert" parameterType="com.fighter.ace.cms.entity.external.Favourite" keyProperty="id" useGeneratedKeys="true">
        INSERT t_favourite(create_time,
            member_id,
            model_id,
            status)
        VALUES (
            now(),
            #{memberId},
            #{modelId},
            1
        )
    </insert>

    <select id="findByMemberIdAndModelId" parameterType="java.util.Map" resultMap="beanMap">
        SELECT id,
            create_time,
            member_id,
            model_id,
            status
        FROM t_favourite
        WHERE status = 1
        AND member_id = #{memberId}
        AND model_id = #{modelId}
    </select>

    <select id="listPageCount" parameterType="java.util.Map" resultType="java.lang.Long">
        SELECT
            COUNT(1)
        FROM
            t_favourite
        WHERE status != -1
        <if test="null != memberId">
            AND member_id = #{memberId}
        </if>
    </select>

    <select id="listPage" parameterType="java.util.Map" resultMap="beanModelMap">
        SELECT f.*,m.name as model_name
        FROM t_favourite f LEFT  JOIN t_model m ON f.model_id = m.id
        WHERE f.status != -1
        <if test="null != memberId">
            AND f.member_id = #{memberId}
        </if>
        ORDER BY create_time DESC
        LIMIT #{pageFirst}, #{pageSize}
    </select>

    <delete id="batchDeleteFavourite" parameterType="java.util.Map">
        DELETE FROM
            t_favourite
        WHERE id IN
        <foreach item = "id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

</mapper>
<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fighter.ace.cms.dao.external.CashDao">

    <resultMap id="beanMap" type="com.fighter.ace.cms.entity.external.Cash">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="member_id" property="memberId" jdbcType="BIGINT"/>
        <result column="coins" property="coins" jdbcType="VARCHAR"/>
        <result column="charges" property="charges" jdbcType="VARCHAR"/>
        <result column="cash" property="cash" jdbcType="VARCHAR"/>
        <result column="pay_type" property="payType" jdbcType="INTEGER"/>
        <result column="account" property="account" jdbcType="VARCHAR"/>
        <result column="real_name" property="realName" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <resultMap id="cashMemberMap" type="com.fighter.ace.cms.entity.external.CashMember">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="member_id" property="memberId" jdbcType="BIGINT"/>
        <result column="member_name" property="memberName" jdbcType="VARCHAR"/>
        <result column="coin" property="coin" jdbcType="INTEGER"/>
        <result column="coins" property="coins" jdbcType="VARCHAR"/>
        <result column="cash" property="cash" jdbcType="VARCHAR"/>
        <result column="charges" property="charges" jdbcType="VARCHAR"/>
        <result column="pay_type" property="payType" jdbcType="INTEGER"/>
        <result column="account" property="account" jdbcType="VARCHAR"/>
        <result column="real_name" property="realName" jdbcType="VARCHAR"/>
        <result column="phone" property="phone" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <insert id="insert" parameterType="com.fighter.ace.cms.entity.external.Cash" keyProperty="id" useGeneratedKeys="true">
        INSERT t_cash(
            create_time,
            member_Id,
            coins,
            charges,
            cash,
            pay_type,
            account,
            real_name,
            phone,
            remark,
            status)
        VALUES (
            now(),
            #{memberId},
            #{coins},
            #{charges},
            #{cash},
            #{payType},
            #{account},
            #{realName},
            #{phone},
            #{remark},
            0
        )
    </insert>

    <select id="getCashMemberById" resultMap="cashMemberMap" parameterType="java.lang.Long">
        SELECT
        p.*,
        m.nick_name as member_name,
        m.coin
        FROM
        t_cash p
        LEFT JOIN t_member m
        ON p.member_id = m.id
        WHERE p.id = #{id}
    </select>

    <update id="update" parameterType="com.fighter.ace.cms.entity.external.Cash">
        UPDATE t_cash
        SET modified_time = now()
        <if test="remark!=null">
            ,remark = #{remark}
        </if>
        <if test="status!=null">
            ,status = #{status}
        </if>
        WHERE id = #{id}
    </update>


    <select id="listPage" parameterType="java.util.Map" resultMap="cashMemberMap">
        SELECT
        p.*,
        m.nick_name as member_name,
        m.coin
        FROM
        t_cash p
        LEFT JOIN t_member m
        ON p.member_id = m.id
        WHERE p.status != -1
        <if test="memberName != null">AND m.nick_name LIKE #{memberName}</if>
        ORDER BY create_time DESC
        LIMIT #{pageFirst},#{pageSize}
    </select>

    <select id="listPageCount" parameterType="java.util.Map" resultType="java.lang.Long">
        SELECT
        COUNT(1)
        FROM
        t_cash p
        LEFT JOIN t_member m
        ON p.member_id = m.id
        WHERE p.status != -1
        <if test="memberName != null">AND m.nick_name LIKE #{memberName}</if>
    </select>



</mapper>
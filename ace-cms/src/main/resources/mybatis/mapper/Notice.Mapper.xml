<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fighter.ace.cms.dao.external.NoticeDao">

    <resultMap id="beanMap" type="com.fighter.ace.cms.entity.external.Notice">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="view_count" property="viewCount" jdbcType="INTEGER"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="pic_url" property="picUrl" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <insert id="insert" parameterType="com.fighter.ace.cms.entity.external.Notice" keyProperty="id" useGeneratedKeys="true">
        INSERT t_notice(create_time,
          title,
          view_count,
          content,
          pic_url,
          status)
        VALUES (
            now(),
            #{title},
            1,
            #{content},
            #{picUrl},
            1
        )
    </insert>
    <!-- 查询总页数-->
    <select id="listPageCount" parameterType="java.util.Map" resultType="java.lang.Long">
        SELECT
        COUNT(1)
        FROM
        t_notice
        WHERE status != -1
        <if test="title != null">AND title LIKE #{title}</if>
        <if test="author != null">AND author LIKE #{author}</if>
        <if test="recommend != null">AND recommend = #{recommend}</if>
    </select>
    <!-- 更新 -->
    <update id="update" parameterType="com.fighter.ace.cms.entity.external.Notice">
        UPDATE t_notice
        SET modified_time = now()
        <if test="title != null">
            ,title = #{title}
        </if>
        <if test="content != null">
            ,content = #{content}
        </if>
        <if test="viewCount != null">
            ,view_count = #{viewCount}
        </if>
        <if test="picUrl != null">
            ,pic_url = #{picUrl}
        </if>
        <if test="status != null">
            ,status = #{status}
        </if>
        where id = #{id};
    </update>
    <!-- 查询分页-->
    <select id="listPage" parameterType="java.util.Map" resultMap="beanMap">
        SELECT
        *
        FROM
        t_notice
        WHERE status != -1
        <if test="title != null">AND title Like #{title}</if>
        ORDER BY id DESC
        LIMIT #{pageFirst},#{pageSize}
    </select>
    <!-- 详情 -->
    <select id="getById" resultMap="beanMap">
        select * from t_notice
        where id = #{id}
    </select>
    <!-- 删除公告 -->
    <update id="deleteById" parameterType="java.lang.Long">
        UPDATE t_notice
        SET
        modified_time = now(),
        status = -1
        where id = #{id}
    </update>
    <!-- 批量删除 -->
    <update id="deleteByBatch" parameterType="java.lang.Integer">
        UPDATE t_notice
        SET
        modified_time = now(),
        status = -1
        WHERE id IN
        <foreach collection="array" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </update>

    <select id="findNoticeList" resultMap="beanMap" parameterType="java.lang.Integer">
        SELECT
          id,
          create_time,
          title,
          view_count,
          content,
          pic_url
        FROM t_notice
        WHERE status = 1
        ORDER BY create_time DESC
        limit #{count}
    </select>

</mapper>
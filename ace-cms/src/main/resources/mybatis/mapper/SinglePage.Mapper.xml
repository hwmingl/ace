<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fighter.ace.cms.dao.external.SinglePageDao">

    <resultMap id="beanMap" type="com.fighter.ace.cms.entity.external.SinglePage">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="title" property="title" jdbcType="VARCHAR"/>
        <result column="content" property="content" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>

    <insert id="insert" parameterType="com.fighter.ace.cms.entity.external.SinglePage" keyProperty="id" useGeneratedKeys="true">
        INSERT t_single_page(create_time,
        title,
        content,
        status)
        VALUES (
        now(),
        #{title},
        #{content},
        1
        )
    </insert>
    <!-- 查询页数 -->
    <select id="listPageCount" parameterType="java.util.Map" resultType="java.lang.Long">
        SELECT
        COUNT(1)
        FROM
        t_single_page
        WHERE 1 = 1
        <if test="title != null">AND title Like #{title}</if>
    </select>

    <!-- 查询分页 -->
    <select id="listPage" parameterType="java.util.Map" resultMap="beanMap">
        SELECT
        *
        FROM
        t_single_page
        WHERE 1 = 1
        <if test="title != null">AND title Like #{title}</if>
        ORDER BY id DESC
        LIMIT #{pageFirst},#{pageSize}
    </select>

    <select id="getById" resultMap="beanMap" parameterType="java.lang.Long">
        SELECT id,
            create_time,
            modified_time,
            title,
            content
        FROM t_single_page
        WHERE id = #{id}
    </select>

    <update id="update" parameterType="com.fighter.ace.cms.entity.external.SinglePage">
        UPDATE t_single_page
        SET modified_time = now()
        <if test="title!=null">
            ,title = #{title}
        </if>
        <if test="content!=null">
            ,content = #{content}
        </if>
        WHERE id = #{id}
    </update>


</mapper>
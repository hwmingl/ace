<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fighter.ace.cms.dao.main.DictDao">

    <resultMap id="beanMap" type="com.fighter.ace.cms.entity.main.Dict">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="name" property="name" jdbcType="VARCHAR"/>
        <result column="data" property="data" jdbcType="VARCHAR"/>
        <result column="remark" property="remark" jdbcType="VARCHAR"/>
        <result column="operator" property="operator" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
    </resultMap>


    <!-- 查询页数 -->
    <select id="listPageCount" parameterType="java.util.Map" resultType="java.lang.Long">
        SELECT
        COUNT(1)
        FROM
            t_dict
        WHERE 1 = 1
    </select>

    <!-- 查询分页 -->
    <select id="listPage" parameterType="java.util.Map" resultMap="beanMap">
        SELECT
            id,
            create_time,
            modified_time,
            name,
            data,
            remark,
            operator,
            status
        FROM
            t_dict
        WHERE 1 = 1
        ORDER BY id ASC
        LIMIT #{pageFirst},#{pageSize}
    </select>

    <select id="findDictList" resultMap="beanMap">
        SELECT
            id,
            create_time,
            modified_time,
            name,
            data,
            remark,
            operator,
            status
        FROM
            t_dict
    </select>

    <select id="getByName" resultMap="beanMap" parameterType="java.util.Map">
        SELECT id,
            create_time,
            modified_time,
            name,
            data,
            remark,
            operator,
            status
        FROM t_dict
        WHERE name = ${name}
        LIMIT 1
    </select>

    <select id="getById" resultMap="beanMap" parameterType="java.lang.Long">
        SELECT id,
            create_time,
            modified_time,
            name,
            data,
            remark,
            operator,
            status
        FROM t_dict
        WHERE id = #{id}
    </select>

    <update id="update" parameterType="com.fighter.ace.cms.entity.main.Dict">
        UPDATE t_dict
        SET modified_time = now()
        <if test="data!=null">
            ,data = #{data}
        </if>
        WHERE id = #{id}
    </update>
</mapper>
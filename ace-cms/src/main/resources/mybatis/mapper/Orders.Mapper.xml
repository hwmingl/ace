<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fighter.ace.cms.dao.external.OrdersDao">

    <resultMap id="beanMap" type="com.fighter.ace.cms.entity.external.Orders">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="member_id" property="memberId" jdbcType="BIGINT"/>
        <result column="order_no" property="orderNo" jdbcType="VARCHAR"/>
        <result column="trade_no" property="tradeNo" jdbcType="VARCHAR"/>
        <result column="pay_type" property="payType" jdbcType="INTEGER"/>
        <result column="total_fee" property="totalFee" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="ext1" property="ext1" jdbcType="VARCHAR"/>
        <result column="ext2" property="ext2" jdbcType="VARCHAR"/>
        <result column="ext3" property="ext3" jdbcType="VARCHAR"/>
        <result column="ext4" property="ext4" jdbcType="VARCHAR"/>
        <result column="ext5" property="ext5" jdbcType="VARCHAR"/>
    </resultMap>

    <resultMap id="OrderMemberMap" type="com.fighter.ace.cms.entity.external.OrderMember">
        <id column="id" property="id" jdbcType="BIGINT"/>
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP"/>
        <result column="modified_time" property="modifiedTime" jdbcType="TIMESTAMP"/>

        <result column="member_id" property="memberId" jdbcType="BIGINT"/>
        <result column="order_no" property="orderNo" jdbcType="VARCHAR"/>
        <result column="trade_no" property="tradeNo" jdbcType="VARCHAR"/>
        <result column="pay_type" property="payType" jdbcType="INTEGER"/>
        <result column="total_fee" property="totalFee" jdbcType="VARCHAR"/>
        <result column="status" property="status" jdbcType="INTEGER"/>
        <result column="ext1" property="ext1" jdbcType="VARCHAR"/>
        <result column="ext2" property="ext2" jdbcType="VARCHAR"/>
        <result column="ext3" property="ext3" jdbcType="VARCHAR"/>
        <result column="ext4" property="ext4" jdbcType="VARCHAR"/>
        <result column="ext5" property="ext5" jdbcType="VARCHAR"/>
    </resultMap>


    <insert id="insert" parameterType="com.fighter.ace.cms.entity.external.Orders" keyProperty="id" useGeneratedKeys="true">
        INSERT t_orders(
          create_time,
          member_Id,
          order_no,
          trade_no,
          pay_type,
          total_fee,
          status,
          ext1,
          ext2,
          ext3,
          ext4,
          ext5)
        VALUES (
            now(),
            #{memberId},
            #{orderNo},
            #{tradeNo},
            #{payType},
            #{totalFee},
            0,
            #{ext1},
            #{ext2},
            #{ext3},
            #{ext4},
            #{ext5}
        )
    </insert>

    <select id="getById" resultMap="beanMap" parameterType="java.lang.Long">
        select id,
          create_time,
          member_Id,
          order_no,
          trade_no,
          pay_type,
          total_fee,
          status,
          ext1,
          ext2,
          ext3,
          ext4,
          ext5
        from t_orders
        where id = #{id};
    </select>

    <update id="update" parameterType="com.fighter.ace.cms.entity.external.Orders">
        UPDATE t_orders
        SET modified_time = now()
        <if test="tradeNo!=null">
            ,trade_no = #{tradeNo}
        </if>
        <if test="status!=null">
            ,status = #{status}
        </if>
        <if test="ext4!=null">
            ,ext4 = #{ext4}
        </if>
        <if test="ext5!=null">
            ,ext5 = #{ext5}
        </if>
        WHERE id = #{id}
    </update>

    <select id="getByOrderNo" resultMap="beanMap" parameterType="java.util.Map">
          SELECT id,
              create_time,
              member_Id,
              order_no,
              trade_no,
              pay_type,
              total_fee,
              status,
              ext1,
              ext2,
              ext3
          FROM t_orders
          WHERE order_no = ${orderNo}
          LIMIT 1
    </select>

    <select id="listPage" parameterType="java.util.Map" resultMap="OrderMemberMap">
        SELECT
        p.*,
        m.nick_name nickname
        FROM
        t_orders p
        LEFT JOIN t_member m
        ON p.member_id = m.id
        WHERE p.status != -1
        and p.ext1='3D'
        <if test="nickName != null">AND m.nick_Name LIKE #{nickName}</if>
        <if test="memberId != null">AND m.id = #{memberId}</if>
        ORDER BY create_time DESC
        LIMIT #{pageFirst},#{pageSize}
    </select>

    <select id="listPageCount" parameterType="java.util.Map" resultType="java.lang.Long">
        SELECT
        COUNT(1)
        FROM
        t_orders p
        LEFT JOIN t_member m
        ON p.member_id = m.id
        WHERE p.status != -1
        and p.ext1='3D'
        <if test="nickName != null">AND m.nick_Name LIKE #{nickName}</if>
        <if test="memberId != null">AND m.id = #{memberId}</if>
    </select>

</mapper>